<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkApplicationWindow" id="window">
    <property name="default-width">400</property>
    <property name="default-height">600</property>
    <property name="title">Boggle</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkDrawingArea" id="board">
            <property name="halign">center</property>
          </object>
        </child>
        <child>
          <object class="GtkStack" id="pagestack">
            <child>
              <object class="GtkStackPage">
                <property name="name">menu</property>
                <property name="title">Menu</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkButton" id="playbutton">
                        <property name="label">Play</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">game</property>
                <property name="title">Play</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkProgressBar" id="timebar">
                      </object>
                    </child>
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="hscrollbar_policy">never</property>
                        <property name="vexpand">true</property>
                        <child>
                          <object class="GtkListView" id="enteredview">
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkEntry" id="entry">
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">results</property>
                <property name="title">Results</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Score: </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="totalscorelabel">
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="hscrollbar_policy">never</property>
                        <property name="vexpand">true</property>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <child>
                              <object class="GtkExpander">
                                <property name="expanded">true</property>
                                <child type="label">
                                  <object class="GtkLabel">
                                    <property name="label">Correct</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkListView" id="correctview">
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GtkExpander">
                                <property name="expanded">true</property>
                                <child type="label">
                                  <object class="GtkLabel">
                                    <property name="label">Not in the dictionary</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkListView" id="notwordview">
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GtkExpander">
                                <property name="expanded">false</property>
                                <child type="label">
                                  <object class="GtkLabel">
                                    <property name="label">Other words on the board</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkListView" id="otherview">
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkButton" id="playagainbutton">
                            <property name="label">Play Again</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="menubutton">
                            <property name="label">Menu</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
